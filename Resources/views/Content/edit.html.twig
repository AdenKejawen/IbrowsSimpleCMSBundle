<h1>{{type}} Content edit</h1>

<form action="{{ path('ibrows_simple_cms_content_update', { 'id': entity.id,'type':type }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('ibrows_simple_cms_content', { 'type':type }) }}">
            Back to the list
        </a>
    </li>
    <li>
        <form action="{{ path('ibrows_simple_cms_content_delete', { 'id': entity.id,'type':type }) }}" method="post">
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
